
<form action= "<%= action  %>" method="post"> 
  <input type="hidden" name="_method" value = '<%= method %>'>

  <label for="user_user_name">Username:
  <input 
    type="text"
    name="user[user_name]"
    value="<%= user.user_name%>">
  </label>

  <label for="user_password">Password:
  <input 
    type="password"
    name="user[password]"
    value= "<%= user.password %>">
  </label>

  <input type="submit" value="Log In!">
</form>